{
  "env": {
    "es2020": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["import", "tailwindcss"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".json"]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "comma-spacing": [1, {
      "before": false,
      "after": true
    }],
    "comma-style": [2, "last"],
    "padded-blocks": [1, "never"],
    "no-console": 1,
    "no-debugger": 2,
    "no-multi-spaces": 1,
    "semi": [1, "always"],
    "semi-spacing": [1, {
      "before": false,
      "after": true
    }],
    "vue/max-len": [1, {
      "code": 120,
      "ignoreHTMLAttributeValues": true
    }],
    "vue/max-attributes-per-line": [0],
    "vue/script-indent": [1]
  }
}
